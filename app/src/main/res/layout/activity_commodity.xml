<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/rectangle_1" />

    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_below="@id/green"
        android:layout_marginTop="0dp"
        android:src="@drawable/person_product" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/iv_user_photo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="47dp"
        android:gravity="center"
        android:text="User Name"
        android:textColor="@color/ltgray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_user_photo"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/my_product"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@id/iv_user_photo"
        android:layout_marginTop="0dp"
        android:src="@drawable/my_product" />

    <ImageButton
        android:id="@+id/button_ordered"
        android:layout_width="61dp"
        android:layout_height="71dp"
        android:layout_below="@+id/tv_student_number"
        android:layout_alignBottom="@+id/my_product"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="52dp"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_ordered" />

    <ImageView
        android:id="@+id/iv_user_info"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_student_number"
        android:layout_alignBottom="@+id/my_product"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="58dp"
        android:scaleType="centerCrop"
        android:src="@drawable/button_add" />

    <ImageButton
        android:id="@+id/button_edit"
        android:layout_width="76dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_student_number"
        android:layout_alignBottom="@+id/my_product"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="264dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="62dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/button_edit_mgr" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_below="@+id/my_product"
        android:src="@drawable/path_2520" />

    <ImageView
        android:id="@+id/withe_img"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_below="@+id/my_product"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/section_2" />

    <ImageButton
        android:id="@+id/arrow_btn1"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_below="@+id/my_product"
        android:layout_alignBottom="@+id/withe_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="301dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="110dp"
        android:background="#00000000"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow" />

    <ImageButton
        android:id="@+id/arrow_btn2"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_below="@+id/my_product"
        android:layout_alignBottom="@+id/withe_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="301dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="59dp"
        android:background="#00000000"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow" />

    <ImageButton
        android:id="@+id/arrow_btn3"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_below="@+id/my_product"
        android:layout_alignBottom="@+id/withe_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="301dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow" />

    <ImageButton
        android:id="@+id/btn_back1"
        android:layout_width="15dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:contentDescription="@string/app_name"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/back" />
</RelativeLayout>